# Editor configuration, see http://editorconfig.org
root = true

[*]
max_line_length = 180
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[*.gradle]
indent_size = 4

[*.ts]
indent_size = 4

[*.java]
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false
